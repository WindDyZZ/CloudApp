    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>OTOP_Home</title> 
</head>

<header>
    <!-- <img class="col-12 pt-0" src="/img/top-banner.png" /> -->
    <div class="top-banner"></div>
    <div class="row col-12">
        <div class="col-3" id="header_logo">
                <div class="logo ">OTOP</div>
        </div>
        <div class="col-lg-6" id="div_search">
            <input id="header_search" type="text" placeholder="Search here">
        </div>
        <nav class="col-3" id="header_nav">
            <a href="cart"><i class="fas fa-shopping-cart"></i></a>
            <a href="history"><i class="fas fa-history"></i></a>
            <a href="profile"><i class="fas fa-user"></i></a>
        </nav>
    </div>
    
</header>

<body>
    <% for(var j=0; j< pnum; j++) {%>
    <!-- province row -->
    <div class="row col-12">
        <div class="col-3 pl-0" id="province_img">
            <img style="max-width: 100%;" src="/img/ex-left-img.png" />
        </div>
        <div class="col-lg-9 col-md-9 col-sm-12" id="product_grid">
            <h1 class="head-province">AYUTTHAYA</h1>
            <div class="col-12">
                <% for(var i=0; i< num ; i++) {%>
                <!-- product -->
                <div class="col" style="display: inline-block;">
                    <!-- picture -->
                    <div class="ctn">
                        <button class="add-btn">
                            <i class="fas fa-cart-plus"></i>
                        </button>
                        <img class="home-pic" src="/img/ex-product.png" />
                    </div>
                    <!-- text box -->
                    <div class="card-price">
                        <p><span class="name">product</span><span class="price">$9,000</span></p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <!-- end province row-->
    <% } %>

</body>


</html>